<?link rel="stylesheet" type="text/css" href="/style.css"?>
<window

        title="Customer modification"  visible="true" mode="modal" minimizable="false"
        border="normal" position="center,center" closable="true" action="show: slideDown;hide: slideUp" onClose="@command('showDialog', page='/pages/empty.zul')">
    <vlayout>
        <grid width="500px">
            <columns>
                <column align="right" hflex="min"/>
                <column/>
            </columns>
            <rows>
                <row>
                    <cell sclass="row-title">${labels.formLabelName}</cell>
                    <cell>
                        <textbox value="@bind(vm.selectedCustomer.name)" width="200px"
                                 constraint="no empty: Plean enter your full name"/>
                    </cell>
                </row>
                <row>
                    <cell sclass="row-title">${labels.formLabelGender}</cell>
                    <cell>
                        <radiogroup model="@load(vm.genderList)"
                                    selectedItem="@bind(vm.selectedCustomer.gender)">
                            <template name="model">
                                <radio label="@bind(each.labelString)"/>
                            </template>
                        </radiogroup>
                    </cell>
                </row>
                <row>
                    <cell sclass="row-title">${labels.formLabelAddress}</cell>
                    <cell>
                        <textbox value="@bind(vm.selectedCustomer.address)" width="200px"
                                 constraint="no empty: Please enter your Address"/>
                    </cell>
                </row>
                <row>
                    <cell sclass="row-title">${labels.formLabelNamePhoneNumber}</cell>
                    <cell>
                        <textbox value="@bind(vm.selectedCustomer.phoneNumber)" width="200px"
                                 constraint="no empty, /\+([0-9]){11}/ : Please enter an valid Phone Number (+36701234567)"/>
                    </cell>
                </row>
                <row>
                    <cell sclass="row-title">${labels.formLabelEmail}</cell>
                    <cell>
                        <textbox value="@bind(vm.selectedCustomer.email)" width="200px"
                                 constraint="/.+@.+\.[a-z]+/: Please enter an e-mail address"/>
                    </cell>
                </row>
                <row>
                    <cell sclass="row-title">${labels.formLabelBirthday}</cell>
                    <cell>
                        <datebox format="yyyy/MM/dd" value="@bind(vm.selectedCustomer.birthday)" width="200px"
                                 constraint="no future"/>
                    </cell>
                </row>
                <row>
                    <cell sclass="row-title">${labels.formLabelCountry}</cell>
                    <cell>
                        <listbox model="@load(vm.countryList)" mold="select" width="200px"
                                 selectedItem="@bind(vm.selectedCustomer.country)">
                            <template name="model">
                                <listitem label="@load(each)"/>
                            </template>
                        </listbox>
                    </cell>
                </row>
            </rows>
        </grid>
        <div>You are editing <label value="@load(vm.selectedCustomer.name)"/>'s profile.
        </div>
        <hlayout>
            <button label="Save" onClick="@command('update', page='/pages/empty.zul')" />
            <button label="Cancel" onClick="@command('showDialog', page='/pages/empty.zul')" />
        </hlayout>
    </vlayout>
</window>